<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".search_results_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_verticalHeadLayout_inSearchResult"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ONLINE STORES"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#800080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_verticalHeadLayout2_inSearchResult"
            android:orientation="vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_txt_offline_stores"
            android:text="OFFLINE STORES"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#800080"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_verticalHeadLayout3_inSearchResult"
            android:orientation="vertical"
            android:visibility="invisible"/>

    </LinearLayout>



</ScrollView>

